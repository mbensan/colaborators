<p style="color: green"><%= notice %></p>

<% content_for :title, "Colaborators" %>

<h1>Colaborators</h1>
<%=colaborators_path%>

<%=form_with url: colaborators_path, method: :get do |form|%>
  <%=form.text_field :query_text, placeholder: 'ingrese texto', value: params[:query_text] %>
<%end%>

<div id="colaborators">
  <% @colaborators.each do |colaborator| %>
    <%= render colaborator %>
    <p>
      <%= link_to "Show this colaborator", colaborator %>
    </p>
  <% end %>
</div>

<%=raw pagy_nav(@pagy)%>

<%= link_to "New colaborator", new_colaborator_path %>
